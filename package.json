{
  "name": "euro-2021",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18",
    "npm": ">=9"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.7",
    "@mui/material": "^5.14.7",
    "@mui/styles": "^5.14.7",
    "date-fns": "^2.30.0",
    "firebase": "9.23.0",
    "notistack": "^2.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.10.1",
    "react-number-format": "^4.9.4",
    "react-router": "^6.15.0",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "reactfire": "^4.2.3",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'",
    "start": "npm i && react-scripts start",
    "build": "react-scripts build",
    "build:prod": "cross-env REACT_APP_DATABASE=PRODUCTION react-scripts build",
    "lint": "eslint src --ext js,jsx",
    "lint:functions": "cd functions && npm run lint",
    "prettier:check": "prettier --check \"{src,functions}/**/*.{js,jsx,ts,md}\"",
    "prettier:write": "prettier --write \"{src,functions}/**/*.{js,jsx,ts,md}\"",
    "test:rules": "firebase emulators:exec --only firestore \"react-scripts test --testPathPattern 'firebase/rules/__tests__/.+\\.spec\\.ts' --env=node --runInBand\"",
    "test": "react-scripts test --testPathIgnorePatterns='<rootDir>/src/firebase/rules/__tests__' --passWithNoTests",
    "bundlewatch": "bundlewatch",
    "eject": "react-scripts eject"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "build/**/*.js",
        "maxSize": "500kb"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/estree": "^1.0.1",
    "@types/lodash": "^4.14.197",
    "babel-plugin-transform-imports": "^2.0.0",
    "bundlewatch": "^0.3.3",
    "cross-env": "^7.0.3",
    "http-proxy-middleware": "^2.0.6",
    "prettier": "^2.8.8",
    "sass": "^1.66.1",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^4.9.5"
  }
}
